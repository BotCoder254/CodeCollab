<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 text-center">
        <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="text-6xl text-red-500 mb-4">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                <%= error.status %> Error
            </h2>
            <p class="text-gray-600 mb-6">
                <%= error.message %>
            </p>
            <div class="flex justify-center space-x-4">
                <a href="/" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <i class="fas fa-home mr-2"></i>
                    Go Home
                </a>
                <button onclick="history.back()" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // GSAP Animations
    gsap.from('.gsap-icon', {
        scale: 0,
        rotation: 180,
        opacity: 0,
        duration: 1,
        ease: 'elastic.out(1, 0.3)'
    });

    gsap.from('.gsap-title', {
        y: 50,
        opacity: 0,
        duration: 0.8,
        delay: 0.5
    });

    gsap.from('.gsap-text', {
        y: 50,
        opacity: 0,
        duration: 0.8,
        delay: 0.7
    });

    gsap.from('.gsap-buttons a', {
        y: 50,
        opacity: 0,
        duration: 0.8,
        delay: 0.9,
        stagger: 0.2
    });

    // Pulsing animation for error icon
    gsap.to('.gsap-icon', {
        scale: 1.1,
        duration: 1,
        repeat: -1,
        yoyo: true,
        ease: 'power1.inOut'
    });
});
</script> 